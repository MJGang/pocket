// 通用工具函数
export function formatDate(date, format = 'YYYY-MM-DD') {
  return new Date(date).toLocaleDateString()
}

export function debounce(fn, delay = 300) {
  let timer = null
  return function (...args) {
    if (timer) clearTimeout(timer)
    timer = setTimeout(() => {
      fn.apply(this, args)
    }, delay)
  }
}
